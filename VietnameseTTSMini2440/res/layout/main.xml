<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="240dp"
    android:layout_height="320dp"
    android:orientation="vertical" >
    //thanh dau tien theo chieu ngang chua mot TextView

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="70dp"
        android:orientation="horizontal" >

        <EditText
            android:id="@+id/Input"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@color/background_color"
            android:gravity="top"
            android:hint="@string/hint_edittext"
            android:scrollbars="vertical"
            android:textSize="15dp" />
    </LinearLayout>
    //thanh thu 2 co 3 nut va mot check box

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:gravity="center"
        android:orientation="horizontal" >

        <ImageButton
            android:id="@+id/submit"
            android:layout_width="50dp"
            android:layout_height="fill_parent"
            android:paddingLeft="8dp"
            android:src="@drawable/submit" />

        <ImageButton
            android:id="@+id/disconnect"
            android:layout_width="50dp"
            android:layout_height="fill_parent"
            android:paddingLeft="8dp"
            android:src="@drawable/disconnecticon" />

        <ImageButton
            android:id="@+id/clearInput"
            android:layout_width="50dp"
            android:layout_height="fill_parent"
            android:paddingLeft="8dp"
            android:src="@drawable/clear2" />

        <CheckBox
            android:id="@+id/Get_text"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_gravity="top"
            android:text="@string/checkbox"
            android:textSize="10dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="15dp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/text_kb_streamed"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:hint="@string/edittext_kb"
            android:textSize="12dp"
            android:textStyle="bold" >
        </TextView>
    </LinearLayout>
    //thnh thu 3

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="75dp"
        android:orientation="horizontal" >

        <ListView
            android:id="@+id/listfile"
            android:layout_width="fill_parent"
            android:layout_height="70dp"
            android:layout_gravity="top"
            android:background="@color/background_color"
            android:scrollbars="vertical" />
    </LinearLayout>
     //thanh thu 4 co mot thanh truot

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="30dp"
        android:orientation="horizontal" >

        <SeekBar
            android:id="@+id/seek_bar"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" />
    </LinearLayout>
    //thanh thu 5 co 3 nut bam va mot thanh truot

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:orientation="horizontal" >

        <ImageButton
            android:id="@+id/play"
            android:layout_width="50dp"
            android:layout_height="fill_parent"
            android:paddingLeft="8dp"
            android:src="@drawable/play" />

        <ImageButton
            android:id="@+id/pause"
            android:layout_width="50dp"
            android:layout_height="fill_parent"
            android:paddingLeft="8dp"
            android:src="@drawable/pause" />

        <ImageButton
            android:id="@+id/reset"
            android:layout_width="50dp"
            android:layout_height="fill_parent"
            android:paddingLeft="8dp"
            android:src="@drawable/reset" />

        <ImageButton
            android:id="@+id/stop"
            android:layout_width="50dp"
            android:layout_height="fill_parent"
            android:paddingLeft="8dp"
            android:src="@drawable/stop32" />

        <ImageButton
            android:id="@+id/exit"
            android:layout_width="50dp"
            android:layout_height="fill_parent"
            android:paddingLeft="8dp"
            android:src="@drawable/exit" />
    </LinearLayout>

</LinearLayout>